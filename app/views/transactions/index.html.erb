<div class="header">
  <span style="float: left;"><%=image_tag("Logo.png")%></span>
  <h1>Rfm Directory</h1>
</div>
<br>

<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Recency</th>
      <th>Frequency</th>
      <th>Monetary</th>
      <th>RFM Score</th>

    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= compute_recency(client) %></td>
        <td><%= compute_recency(client) %></td>
        <td><%= compute_recency(client) %></td>
        <td><%= get_score(client) %></td>
        <td><%= link_to 'Show', client %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="clear:both;"></div>
<div style="margin: 20px;">
  <%= link_to 'Back', root_path %>
</div>
<%= render 'footer' %>

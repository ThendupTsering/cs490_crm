<div class="header">
  <span style="float: left;"><%=image_tag("Logo.png")%></span>
  <h1>Client Directory</h1>
</div>
<br>

<%= search_form_for(@q) do |f| %>
  <%= f.label :entity_type %>
  <%= f.search_field :entity_type_cont %>
  <br>
  <%= f.label :name %>
  <%= f.search_field :name_cont %>
  <br>
  <%= f.label :industry %>
  <%= f.search_field :industry_cont %>

  <%= f.submit %>
<% end %>

<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Entity type</th>
      <th>Email</th>
      <th>Phone no</th>
      <th>Fax no</th>
      <th>Gender</th>
      <th>Career</th>
      <th>Birthday</th>
      <th>Entry point</th>
      <th>Entry date</th>
      <th>Size</th>
      <th>Contact name</th>
      <th>Industry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.address %></td>
        <td><%= client.entity_type %></td>
        <td><%= client.email %></td>
        <td><%= client.phone_no %></td>
        <td><%= client.fax_no %></td>
        <td><%= client.gender %></td>
        <td><%= client.career %></td>
        <td><%= client.birthday %></td>
        <td><%= client.entry_point %></td>
        <td><%= client.entry_date %></td>
        <td><%= client.size %></td>
        <td><%= client.contact_name %></td>
        <td><%= client.industry %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div style="margin: 20px;">
  <%= link_to 'New Client', new_client_path %> |
  <%= link_to 'Home', root_path %>
</div>
<%= render 'footer' %>

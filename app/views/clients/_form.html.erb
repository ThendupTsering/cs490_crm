      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :entity_type %><br>
    <%= f.select :entity_type, ["Business","Consumer"] %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone_no %><br>
    <%= f.text_field :phone_no %>
  </div>
  <div class="field">
    <%= f.label :fax_no %><br>
    <%= f.text_field :fax_no %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select :gender, ["N/A","Male","Female"] %>
  </div>
  <div class="field">
    <%= f.label :career %><br>
    <%= f.text_field :career %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, :start_year => 1900, :end_year => 2016 %>
  </div>
  <div class="field">
    <%= f.label :entry_point %><br>
    <%= f.text_field :entry_point %>
  </div>
  <div class="field">
    <%= f.label :entry_date %><br>
    <%= f.date_select :entry_date, :end_year => 2020 %>
  </div>

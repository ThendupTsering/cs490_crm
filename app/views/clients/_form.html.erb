<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field_holder">
    <div class="field">
      <%= f.label :name %>:
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :address %>:
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :entity_type %>:
      <%= f.select :entity_type, ["Business","Consumer"] %>
    </div>
    <div class="field">
      <%= f.label :email %>:
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :phone_no %>:
      <%= f.text_field :phone_no %>
    </div>
    <div class="field">
      <%= f.label :fax_no %>:
      <%= f.text_field :fax_no %>
    </div>
    <div class="field">
      <%= f.label :gender %>:
      <%= f.select :gender, ["N/A","Male","Female"] %>
    </div>
    <div class="field">
      <%= f.label :career %>:
      <%= f.text_field :career %>
    </div>
    <div class="field">
      <%= f.label :birthday %>:
      <%= f.date_select :birthday, :start_year => 1900, :end_year => 2016 %>
    </div>
    <div class="field">
      <%= f.label :entry_point %>:
      <%= f.text_field :entry_point %>
    </div>
    <div class="field">
      <%= f.label :entry_date %>:
      <%= f.date_select :entry_date, :end_year => 2020 %>
    </div>
    <div class="field">
      <%= f.label :size %>:
      <%= f.number_field :size %>
    </div>
    <div class="field">
      <%= f.label :contact_name %>:
      <%= f.text_field :contact_name %>
    </div>
    <div class="field">
      <%= f.label :industry %>:
      <%= f.text_field :industry %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>

<p id="notice"><%= notice %></p>


<div class="header">
  <span style="float: left;"><%=image_tag("Logo.png")%></span>
  <h1>Client: <%= @client.name %></h1>
</div>

<div>
  <div class="field_holder">
    <div class="field">
      <strong>Name:</strong>
      <%= @client.name %>
    </div>

    <div class="field">
      <strong>Address:</strong>
      <%= @client.address %>
    </div>

    <div class="field">
      <strong>Entity type:</strong>
      <%= @client.entity_type %>
    </div>

    <div class="field">
      <strong>Email:</strong>
      <%= @client.email %>
    </div>

    <div class="field">
      <strong>Phone no:</strong>
      <%= @client.phone_no %>
    </div>

    <div class="field">
      <strong>Fax no:</strong>
      <%= @client.fax_no %>
    </div>

    <div class="field">
      <strong>Gender:</strong>
      <%= @client.gender %>
    </div>

    <div class="field">
      <strong>Career:</strong>
      <%= @client.career %>
    </div>

    <div class="field">
      <strong>Birthday:</strong>
      <%= @client.birthday %>
    </div>

    <div class="field">
      <strong>Entry point:</strong>
      <%= @client.entry_point %>
    </div>

    <div class="field">
      <strong>Entry date:</strong>
      <%= @client.entry_date %>
    </div>

    <div class="field">
      <strong>Size:</strong>
      <%= @client.size %>
    </div>

    <div class="field">
      <strong>Contact name:</strong>
      <%= @client.contact_name %>
    </div>

    <div class="field">
      <strong>Industry:</strong>
      <%= @client.industry %>
    </div>
  </div>

  <div class="ticket_holder">
    <h2>Tickets</h2>
    <% @client.tickets.each do |ticket| %>
      <p>
        <strong>Created on:</strong>
        <%= ticket.date_created %>
      </p>

      <p>
        <strong>Feedback:</strong>
        <%= ticket.feedback %>
      </p>

      <p>
        <strong>Assigned to:</strong>
        <%= ticket.salesperson == nil ? "No one" : ticket.salesperson.name %>
      </p>
      <p>
        <%= link_to 'Destroy Ticket', [ticket.client, ticket],
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %>
      </p>
    <% end %>
  </div>
  <div class="ticket_maker">
    <h2>Add a ticket:</h2>
    <%= form_for([@client, @client.tickets.build]) do |f| %>
      <p>
        <%= f.label :date_created %><br>
        <%= f.date_select :date_created, :start_year => 2010, :end_year => 2016 %>
      </p>
      <p>
        <%= f.label :Feedback %><br>
        <%= f.text_area :feedback %>
      </p>
      <p>
        <%= f.label :assign_to %><br>
        <%= f.collection_select :salesperson_id, Salesperson.all, :id, :name %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>
<div style="clear:both;"></div>
<div style="margin: 20px">
<%= link_to 'Edit', edit_client_path(@client) %> |
<%= link_to 'Back', clients_path %>
</div>
<%= render 'footer' %>

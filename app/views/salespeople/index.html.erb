<div class="header">
  <span style="float: left;"><%=image_tag("Logo.png")%></span>
  <h1>Salesperson Directory</h1>
</div>
<br>

<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Tickets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salespeople.each do |salesperson| %>
      <tr>
        <td><%= salesperson.name %></td>
        <td><%= salesperson.team %></td>
        <td><%= salesperson.tickets.length %></td>
        <td><%= link_to 'Show', salesperson %></td>
        <td><%= link_to 'Edit', edit_salesperson_path(salesperson) %></td>
        <td><%= link_to 'Destroy', salesperson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="margin: 20px;">
  <%= link_to 'New Salesperson', new_salesperson_path %> |
  <%= link_to 'Home', root_path %>
</div>
<%= render 'footer' %>

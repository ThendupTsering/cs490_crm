<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="field_holder">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div class="actions">
      <%= f.button :submit %>
    </div>
  </div>

  <% end %>

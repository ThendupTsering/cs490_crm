<div class="header">
  <span style="float: left;"><%=image_tag("Logo.png")%></span>
  <h1>Product: <%= @product.name %></h1>
</div>

<p id="notice"><%= notice %></p>
<div class="field_holder">
  <div class="field">
    <strong>Name:</strong>
    <%= @product.name %>
  </div>

  <div class="field">
    <strong>Price:</strong>
    <%= @product.price %>
  </div>
</div>

<div class="return_holder">
  <h2>Returns made</h2>
  <% if @product.returns.length == 0 %>
    <p> No returns for this product </p>
  <% end %>
  <% @product.returns.each do |single_return| %>
    <p>
      <strong>Returned by:</strong>
      <%= single_return.client.name %>
    </p>
    <p>
      <strong>Reason for return:</strong>
      <%= single_return.reason %>
    </p>
    <p>
      <strong>Date of return:</strong>
      <%= single_return.return_date %>
    </p>
  <% end %>
</div>

<div style="clear:both;"></div>
<div style="margin: 20px;">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
<%= render 'footer' %>
